<%= render 'dashboard_header' %>

	
 <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h4 mb-0 text-gray-800"> Week calendar </h1>
</div>
<div class="col-xl-12 col-md-12 mb-4">           
	<!-- DataTales Example -->
          <div class="card border-left-primary shadow mb-4">
            <div class="card-header py-4">
              <h4 class="m-0  h4 mb-0 text-gray-800"> Date showing: <%= @today_date.strftime("%A %d-%m-%Y") + " - " + @next_friday_date.strftime("%A %d-%m-%Y") %></h4>
              <hr/>
              <p style="margin-top: 10px;">
              <span style="margin-right: 50px;">
              <i class="fas fa-angle-double-left"></i>
              <%= link_to "Previous week", "/pages/dashboard?date=" + @today_date.last_week(:monday).strftime("%Y-%m-%d") %>
            </span>
              <i class="fas fa-angle-left"></i>
              <%= link_to "Previous day", "/pages/dashboard?date=" + @today_date.prev_day.strftime("%Y-%m-%d") %>
              |  <%= link_to "Today", "/pages/dashboard?date=" + DateTime.now.strftime("%Y-%m-%d") %> |

              <span style="margin-right: 50px;">
              <%= link_to "Next day", "/pages/dashboard?date=" + @today_date.next_day.strftime("%Y-%m-%d") %>
              <i class="fas fa-angle-right"></i>
            </span>
             <%= link_to "Next week", "/pages/dashboard?date=" + @today_date.next_occurring(:monday).strftime("%Y-%m-%d") %>
              <i class="fas fa-angle-double-right"></i>
            </p>
            </div>
            <div class="card-body">
              <div class="table-responsive table-striped">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Location</th>
                      <th>How many</th>
                      <th>Delivery date</th>
                      <th>Comment</th>
                      
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Name</th>
                       <th>Location</th>
                      <th>How many</th>
                      <th>Delivery date</th>
                      <th>Comment</th>
                     
                    </tr>
                  </tfoot>
                  <tbody>

                    <% @this_week.all.each do |d| %>
                    <tr>
                
                      <td><%= link_to d.get_obj.company.name + " - " + d.get_obj.name, d %></td>
                     <td><%= d.get_obj.location %></td>
                     <td><%= d.change_amount %></td>
                     
                      <td><%= d.delivery.strftime("%A %d-%m-%Y") %></td>
                      <td><%= d.got_comments? ? d.get_comment   : "No comments" %>, <%= link_to "Add", new_comment_path + "?klass=" + d.class.name + "&klass_id=" + d.id.to_s  %> <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>  </td>
                      
                    </tr>
                  <% end %>
                 
                    </tbody>
                </table>
              </div>
            </div>


          </div>
</div>
<!-- end col -->


</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>