                      <th>Delivered</th>
                      <th>Comment</th>
                      <th>Add comment</th>
                    </tr>
                  </tfoot>
                  <tbody>

                    <% @today.all.each do |d| %>
                    <tr>
                
                      <td><%= link_to d.get_obj.company.name + " " + d.get_obj.name, d.get_obj %></td>
                      <td><%= d.change_amount %></td>
                      
                      <td><%= d.delivery.strftime("%A %d-%m-%Y") %></td>
                      <td>
                        <%= form_for d do |form| %>
                              <%= form.hidden_field :delivered, :value => false %>
