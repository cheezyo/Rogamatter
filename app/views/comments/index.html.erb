<p id="notice"><%= notice %></p>

<!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">All comments</h1>
            <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
      


<div class="row">

       <div class="col-xl-12 col-lg-12 col-md-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary"> </h6>
              </div>
              <div class="card-body">
                <table class="table table-striped table-responsive-md" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Comment thread</th>
                      <th>Last</th>
                      <th>Comment</th>
                      <th>#</th>
                      <th>By</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                       <th>Comment thread</th>
                      <th>Last</th>
                      <th>Comment</th>
                      <th>#</th>
                      <th>By</th>
                    </tr>
                  </tfoot>
                  <tbody>

                     <% @arr.each do |klass| %>
                    <tr>
                          <td><%= link_to klass.name, klass %> </td>
                          <td><%= time_ago_in_words(klass.comments.last.created_at)  %> ago</td>
                          <td><%= klass.comments.last.comment %></td>
                          <td>[<%= klass.comments.count %>]</td>
                          <td><%= link_to klass.comments.last.user.username, klass.comments.last.user %></td>
                     
                    </tr>
                  <% end %>
                 
                    </tbody>
                </table>      
                      
                      
                    
              </div>
              <div class="card-footer">
                <i class="far fa-edit"></i>
                
                <i class="far fa-minus-square"></i>
                
              </div>
                    
                  
          </div>
      </div>

</div>

