<p id="notice"><%= notice %></p>
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">  Mats </h1>
</div>

<!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">All mats</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Mat type</th>
                      <th>Mat size</th>
                      <th>Inventory</th>
                      <th>Comment</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                       <th>Mat type</th>
                      <th>Mat size</th>
                      <th>Inventory</th>
                      <th>Comment</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </tfoot>
                  <tbody>

                    <% @mats.each do |mat| %>
                    <tr>
                      <td><%= link_to mat.mat_type, mat %></td>
                      <td><%= mat.mat_size %></td>
                      <td> <%= mat.remaining %> (<%= mat.inventory %>)</td>
                      <td><%= mat.comment %></td>
                      <td><%= link_to 'Edit', edit_mat_path(mat) %></td>

                      <td>
                        <% if mat.check_if_sold? %>
                        <%= link_to 'Delete', mat, method: :delete, data: { confirm: 'Are you sure?' } %>
                        <% else %>
                        Delete contracts first
                        <% end %>  
                      </td>
                    </tr>
                  <% end %>
                 
                    </tbody>
                </table>
              </div>
            </div>
          </div>